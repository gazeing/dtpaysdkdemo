<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.digitalturbine.dtpaysdkdemo.AppiaActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open popup appwall"
        android:id="@+id/button_popup_appwall"
        android:onClick="showPopupAppWall"
        android:layout_below="@id/text1"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open popup banner ad"
        android:id="@+id/button_popup_banner_ad"
        android:onClick="showPopupBannerAd"
        android:layout_below="@id/button_popup_appwall"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open full screen app wall"
        android:id="@+id/button_fullscreen_appwall"
        android:onClick="showFullscreenAppWall"
        android:layout_below="@id/button_popup_banner_ad"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show embedder banner"
        android:id="@+id/button_show_embedded_banner"
        android:onClick="showEmbeddedBanner"
        android:layout_below="@id/button_fullscreen_appwall"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show embedder Appwall"
        android:id="@+id/button_show_embedded_appwall"
        android:onClick="showEmbeddedAppWall"
        android:layout_below="@id/button_show_embedded_banner"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send user data"
        android:id="@+id/button_send_user_data"
        android:onClick="sendUserData"
        android:layout_below="@id/button_show_embedded_appwall"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send event1"
        android:id="@+id/button_send_event"
        android:onClick="sendEvent"
        android:layout_below="@id/button_send_user_data"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
